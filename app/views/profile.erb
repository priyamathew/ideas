<h1> Hi <%= @user.name %>! </h1>

<h2> Create a group: </h2>

<form action='/group/create' method="POST">
  <input class="org_name" type="text" name="group[name]" placeholder="Enter your organization's name">
  <input type="submit" value="submit"> 
</form>

<h2> Join a group: </h2>
<form action='/group/add_member' method="POST">
  <input class="group_id" type="text" name="group[code]" placeholder="Enter a group id"> 
  <input type="submit" value="submit"> 
</form>

<h2>Groups you own:</h2>
<% current_user.admingroups.each do |admingroup| %>
  <a href="/group/<%= admingroup.id %>/home"><%= admingroup.name  %></a>
  <br>
<% end %>

<h2>Groups you belong to:</h2>
<% current_user.groups.each do |group| %>
  <a href="/group/<%= group.id %>/home"><%= group.name %></a>
<% end %>
