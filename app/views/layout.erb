<body>
  <nav>
    <p class="brand"><a href="/">IDEAS</a></p>
    <ul>
      <% if current_user %>
        <li><a class="idea" href="/idea/create">New Idea</a></li>
        <li><a href="/user/profile/<%= @current_user.id %>">Profile</a></li>
        <li><a id="sign out" href="/user/logout">Sign Out</a></li>
